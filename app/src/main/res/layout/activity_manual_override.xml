<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.genius.shreyashirday.robotcontrol.ManualOverride">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forward"
        android:id="@+id/forwardB"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/leftB"
        android:layout_below="@+id/forwardB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/rightB"
        android:layout_alignTop="@+id/leftB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backward"
        android:id="@+id/backwardB"
        android:layout_below="@+id/rightB"
        android:layout_alignLeft="@+id/forwardB"
        android:layout_alignStart="@+id/forwardB"
        android:layout_marginTop="75dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/forwardT"
        android:layout_alignParentTop="true"
        android:hint="0-255"
        android:layout_alignRight="@+id/forwardB"
        android:layout_alignEnd="@+id/forwardB"
        android:layout_alignLeft="@+id/forwardB"
        android:layout_alignStart="@+id/forwardB"
        android:text="255" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/leftT"
        android:layout_above="@+id/rightB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/leftB"
        android:layout_alignEnd="@+id/leftB"
        android:hint="0-255"
        android:text="255" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/rightT"
        android:layout_alignTop="@+id/leftT"
        android:layout_toEndOf="@+id/backwardB"
        android:layout_alignLeft="@+id/rightB"
        android:layout_alignStart="@+id/rightB"
        android:hint="0-255"
        android:text="255" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/backwardT"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/forwardB"
        android:layout_alignEnd="@+id/forwardB"
        android:layout_alignLeft="@+id/backwardB"
        android:layout_alignStart="@+id/backwardB"
        android:hint="0-255"
        android:text="255" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stopB2"
        android:layout_below="@+id/backwardB"
        android:layout_alignLeft="@+id/backwardB"
        android:layout_alignStart="@+id/backwardB"
        android:layout_marginTop="56dp"
        android:layout_alignRight="@+id/backwardB"
        android:layout_alignEnd="@+id/backwardB" />
</RelativeLayout>
